@model ShopInfomation.Models.ShopViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
  

}
<h2>Create Shop</h2>

<form method="post" style="padding-top:12px">

    <div class="form-group">

        @Html.EditorFor(model => model.ShopName, new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
    </div>
 
    <div class="form-group">
        
        <select class="form-control" name="LevelId">
            <option value="0"> --Select--</option>

            @foreach (var item in ViewBag.AllLevel)
            {
                <option value="@item.LevelId">@item.LevelNo</option>

            }

        </select>
    </div>
    <div class="form-group">
      
        <select class="form-control" name="BlockId">
                <option value="0"> --Select--</option>
            @foreach (var item in ViewBag.AllBlock)
            {
                <option value="@item.BlockId">@item.BlockName</option>
            }

        </select>
    </div>
 
    <input type="submit" name="submit" value="Save" class="btn btn-success" />

</form>